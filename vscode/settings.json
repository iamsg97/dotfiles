{
	// ========================================
	// EDITOR SETTINGS
	// ========================================
	"editor.tabSize": 4,
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": "always",
		"source.organizeImports": "always"
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.insertSpaces": false,
	"editor.wordWrap": "off",
	"editor.cursorSurroundingLines": 10,
	// Editor Suggestions & IntelliSense
	"editor.inlineSuggest.enabled": true,
	// Editor Word Handling
	"editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
	// ========================================
	// FILE MANAGEMENT
	// ========================================
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/node_modules": true,
		"**/dist": true,
		"**/build": true,
		"**/.next": true,
		"**/.nuxt": true
	},
	// ========================================
	// SEARCH SETTINGS
	// ========================================
	"search.exclude": {
		"**/node_modules": true,
		"**/dist": true,
		"**/build": true,
		"**/.next": true,
		"**/.nuxt": true
	},
	// ========================================
	// WORKBENCH & UI
	// ========================================
	"workbench.startupEditor": "none",
	"workbench.enableExperiments": false,
	"window.closeWhenEmpty": true,
	// Explorer Settings
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.compactFolders": false,
	// ========================================
	// LANGUAGE-SPECIFIC SETTINGS
	// ========================================
	// JavaScript & TypeScript
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"javascript.suggest.autoImports": true,
	"typescript.suggest.autoImports": true,
	"javascript.format.enable": false,
	// Go Language
	"go.buildFlags": [
		"-v"
	],
	"go.useLanguageServer": true,
	"go.testEnvFile": "",
	"go.toolsManagement.autoUpdate": true,
	// Rust Language
	"rust-analyzer.inlayHints.parameterHints.enable": false,
	"rust-analyzer.inlayHints.typeHints.enable": false,
	"rust-analyzer.inlayHints.typeHints.hideClosureInitialization": false,
	"rust-analyzer.inlayHints.typeHints.hideNamedConstructor": false,
	"rust-analyzer.inlayHints.lifetimeElisionHints.useParameterNames": false,
	"rust-analyzer.inlayHints.reborrowHints.enable": "never",
	"rust-analyzer.inlayHints.chainingHints.enable": false,
	"rust-analyzer.inlayHints.bindingModeHints.enable": false,
	"rust-analyzer.inlayHints.renderColons": false,
	"rust-analyzer.inlayHints.lifetimeElisionHints.enable": "never",
	"rust-analyzer.inlayHints.closingBraceHints.enable": false,
	"rust-analyzer.inlayHints.closureReturnTypeHints.enable": "never",
	"rust-analyzer.inlayHints.closingBraceHints.minLines": 0,
	"rust-analyzer.completion.callable.snippets": "none",
	"rust-analyzer.semanticHighlighting.doc.comment.inject.enable": false,
	"rust-analyzer.procMacro.ignored": {},
	// ========================================
	// FORMATTER CONFIGURATIONS
	// ========================================
	// Prettier Settings
	"prettier.tabWidth": 4,
	"prettier.bracketSpacing": true,
	"prettier.arrowParens": "avoid",
	"prettier.singleQuote": true,
	"prettier.trailingComma": "none",
	"prettier.semi": false,
	"prettier.jsxSingleQuote": true,
	"prettier.requireConfig": false,
	// Language-specific Formatters
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[spring-boot-properties]": {
		"editor.defaultFormatter": "foxundermoon.shell-format"
	},
	// ========================================
	// EMMET SETTINGS
	// ========================================
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
		"typescript": "typescriptreact",
		"vue-html": "html",
		"vue": "html"
	},
	"emmet.triggerExpansionOnTab": true,
	// ========================================
	// ESLINT SETTINGS
	// ========================================
	"eslint.enable": true,
	"eslint.run": "onSave",
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"vue"
	],
	// ========================================
	// GIT SETTINGS
	// ========================================
	"git.autofetch": true,
	"git.confirmSync": false,
	"git.openRepositoryInParentFolders": "always",
	// ========================================
	// GITHUB COPILOT SETTINGS
	// ========================================
	"github.copilot.chat.codesearch.enabled": true,
	"github.copilot.chat.agent.thinkingTool": true,
	// ========================================
	// VIM SETTINGS
	// ========================================
	"vim.enableNeovim": false,
	"vim.neovimUseConfigFile": true,
	"vim.leader": "<space>",
	"vim.useSystemClipboard": true,
	"vim.useCtrlKeys": true,
	"vim.easymotion": true,
	"vim.incsearch": true,
	"vim.hlsearch": true,
	// Vim Cursor Settings
	"vim.cursorStylePerMode.normal": "block",
	"vim.cursorStylePerMode.insert": "block",
	// Vim Search Highlighting
	"vim.searchHighlightColor": "rgba(150, 255, 255, 0.3)",
	// Vim Status Bar Colors
	"vim.statusBarColorControl": true,
	"vim.statusBarColors.normal": [
		"#8FBCBB",
		"#434C5E"
	],
	"vim.statusBarColors.insert": [
		"#BF616A",
		"#434C5E"
	],
	"vim.statusBarColors.visual": [
		"#B48EAD",
		"#434C5E"
	],
	"vim.statusBarColors.visualline": [
		"#B48EAD",
		"#434C5E"
	],
	"vim.statusBarColors.visualblock": [
		"#A3BE8C",
		"#434C5E"
	],
	"vim.statusBarColors.replace": [
		"#D08770",
		"#434C5E"
	],
	// Vim Key Bindings - Insert Mode
	"vim.insertModeKeyBindings": [
		{
			"before": [
				"j",
				"j"
			],
			"after": [
				"<Esc>"
			]
		}
	],
	// Vim Key Bindings - Normal Mode
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": [
				"<leader>",
				"d"
			],
			"after": [
				"d",
				"d"
			]
		},
		{
			"before": [
				"<leader>",
				"i"
			],
			"after": [],
			"commands": [
				{
					"command": "workbench.action.terminal.focus"
				}
			]
		},
		{
			"before": [
				"<leader>",
				"u"
			],
			"after": [],
			"commands": [
				{
					"command": "workbench.action.focusActiveEditorGroup"
				}
			]
		},
		{
			"before": [
				"<leader>",
				"p"
			],
			"after": [],
			"commands": [
				{
					"command": "workbench.action.quickOpen"
				}
			]
		},
		{
			"before": [
				"<leader>",
				"o"
			],
			"after": [],
			"commands": [
				{
					"command": "workbench.action.quickOpen"
				}
			]
		},
		{
			"before": [
				"<leader>",
				"n"
			],
			"after": [],
			"commands": [
				{
					"command": "workbench.action.terminal.toggleTerminal"
				}
			]
		},
		{
			"before": [
				"<leader>",
				"h"
			],
			"after": [],
			"commands": [
				{
					"command": "workbench.action.focusFirstEditorGroup"
				}
			]
		},
		{
			"before": [
				"<leader>",
				"l"
			],
			"after": [],
			"commands": [
				{
					"command": "workbench.action.focusSecondEditorGroup"
				}
			]
		},
		{
			"before": [
				"<C-n>"
			],
			"after": [],
			"commands": [
				{
					"command": ":nohl"
				}
			]
		}
	],
	// Vim Handle Keys (Disable VS Code shortcuts that conflict)
	"vim.handleKeys": {
		"<C-a>": false,
		"<C-f>": false,
		"<C-p>": false,
		"<C-i>": false
	},
	// ========================================
	// REMOTE & NETWORKING
	// ========================================
	"remote.autoForwardPortsSource": "hybrid",
	// ========================================
	// PRIVACY & TELEMETRY
	// ========================================
	"telemetry.telemetryLevel": "off",
	"redhat.telemetry.enabled": true,
	"extensions.ignoreRecommendations": true,
	"workbench.colorCustomizations": {
		"statusBar.background": "#B48EAD",
		"statusBar.noFolderBackground": "#B48EAD",
		"statusBar.debuggingBackground": "#B48EAD",
		"statusBar.foreground": "#434C5E",
		"statusBar.debuggingForeground": "#434C5E"
	}
}