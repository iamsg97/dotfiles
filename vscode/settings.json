{
    // =========================
    // General Editor Settings
    // =========================
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.fontFamily": "'Terminess Nerd Font', 'FiraCode Nerd Font'",
    "editor.fontLigatures": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "phase",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.minimap.enabled": false,
    // "editor.renderWhitespace": "all",
    "editor.guides.indentation": false,
    "editor.trimAutoWhitespace": true,
    "editor.smoothScrolling": true,
    "editor.lineNumbers": "relative",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    // =========================
    // File & Explorer
    // =========================
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 800,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/.next": true,
        "**/.nuxt": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/.next": true,
        "**/.nuxt": true
    },
    "workbench.iconTheme": "catppuccin-frappe",
    "workbench.editor.enablePreview": false,
    "workbench.colorTheme": "Catppuccin Frappé",
    "catppuccin.accentColor": "teal",
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 1,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "breadcrumbs.enabled": true,
    // =========================
    // Terminal
    // =========================
    "terminal.integrated.fontFamily": "'Terminess Nerd Font'",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.scrollback": 10000,
    // =========================
    // Git
    // =========================
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    // =========================
    // Prettier
    // =========================
    "prettier.tabWidth": 4,
    "prettier.bracketSpacing": true,
    "prettier.arrowParens": "avoid",
    "prettier.singleQuote": true,
    "prettier.trailingComma": "none",
    "prettier.semi": false,
    "prettier.jsxSingleQuote": true,
    "prettier.requireConfig": false,
    // =========================
    // Language Specific Settings
    // =========================
    // JS/TS/React
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.autoImports": true,
    "javascript.format.enable": false,
    "typescript.suggest.autoImports": true,
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    // C / OS Dev
    "[c]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "C_Cpp.clang_format_style": "Google",
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**",
        "/usr/include",
        "/usr/local/include"
    ],
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    "C_Cpp.errorSquiggles": "enabled",
    // Shell, dotenv, etc.
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[dotenv]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[spring-boot-properties]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",
    "makefile.configureOnOpen": true,
    "github.copilot.nextEditSuggestions.enabled": true,
    // ========================================
    // VIM - BASIC SETTINGS
    // ========================================
    "vim.enableNeovim": false,
    "vim.neovimUseConfigFile": true,
    "vim.leader": "<space>",
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    // ========================================
    // VIM - CURSOR SETTINGS
    // ========================================
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.insert": "block",
    // ========================================
    // VIM - SEARCH & HIGHLIGHTING
    // ========================================
    "vim.searchHighlightColor": "#A3BE8C",
    // ========================================
    // VIM - STATUS BAR COLORS
    // ========================================
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": [
        "#8BD5CA", // Teal (Catppuccin Frappé Teal)
        "#303446" // Surface0
    ],
    "vim.statusBarColors.insert": [
        "#99D1DB", // Blue (Catppuccin Frappé Blue)
        "#303446"
    ],
    "vim.statusBarColors.visual": [
        "#F4B8E4", // Pink (Catppuccin Frappé Pink)
        "#303446"
    ],
    "vim.statusBarColors.visualline": [
        "#F4B8E4", // Pink (Catppuccin Frappé Pink)
        "#303446"
    ],
    "vim.statusBarColors.visualblock": [
        "#8CAAEE", // Lavender (Catppuccin Frappé Lavender)
        "#303446"
    ],
    "vim.statusBarColors.replace": [
        "#E78284", // Red (Catppuccin Frappé Red)
        "#303446"
    ],
    // ========================================
    // VIM - KEY BINDINGS
    // ========================================
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<esc>"
            ]
        },
        {
            "before": [
                "[",
                "]",
                "\\"
            ],
            "after": [
                "{",
                "<cr>",
                "<esc>",
                "k",
                "o"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "d",
                "d"
            ]
        },
        {
            "before": [
                "<leader>",
                "u"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.focusActiveEditorGroup"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "o"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.quickOpen"
                }
            ]
        },
        {
            "before": [
                "<C-d>"
            ],
            "after": [
                "5",
                "j"
            ]
        },
        {
            "before": [
                "<C-u>"
            ],
            "after": [
                "5",
                "k"
            ]
        },
        {
            "before": [
                "<leader>",
                "n"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.terminal.toggleTerminal"
                }
            ]
        },
        {
            "before": [
                "<C-h>"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.focusFirstEditorGroup"
                }
            ]
        },
        {
            "before": [
                "<C-l>"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.focusSecondEditorGroup"
                }
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "after": [],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        }
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-b>": false,
        "<C-f>": false,
        "<C-p>": false,
        "<C-i>": false,
        "<C-j>": false
    },
    // ========================================
    // EXTENSIONS & PLUGINS
    // ========================================
    "cSpell.enabled": false,
    "extensions.ignoreRecommendations": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#F4B8E4",
        "statusBar.noFolderBackground": "#F4B8E4",
        "statusBar.debuggingBackground": "#F4B8E4",
        "statusBar.foreground": "#303446",
        "statusBar.debuggingForeground": "#303446"
    },
    // =========================
    // Suggestions for future learning:
    // - Consider installing extensions for GraphQL, Redis, AWS, Docker, Kubernetes, and C/Embedded development.
    // - Explore VSCode Remote - Containers for dev environments.
    // - Use settings sync to keep your setup portable.
}
