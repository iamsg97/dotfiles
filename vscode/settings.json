{
    // =========================
    // General Editor Settings
    // =========================
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.fontFamily": "'Terminess Nerd Font', 'FiraCode Nerd Font'",
    "editor.fontLigatures": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "phase",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.trimAutoWhitespace": true,
    "editor.smoothScrolling": true,
    "editor.lineNumbers": "relative",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    // =========================
    // File & Explorer
    // =========================
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 800,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/.next": true,
        "**/.nuxt": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/.next": true,
        "**/.nuxt": true
    },
    "workbench.iconTheme": "catppuccin-frappe",
    "workbench.editor.enablePreview": false,
    "workbench.colorTheme": "Catppuccin Frapp√©",
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 1,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "breadcrumbs.enabled": true,
    // =========================
    // Terminal
    // =========================
    "terminal.integrated.fontFamily": "'Terminess Nerd Font'",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.scrollback": 10000,
    // =========================
    // Git
    // =========================
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    // =========================
    // Prettier
    // =========================
    "prettier.tabWidth": 4,
    "prettier.bracketSpacing": true,
    "prettier.arrowParens": "avoid",
    "prettier.singleQuote": true,
    "prettier.trailingComma": "none",
    "prettier.semi": false,
    "prettier.jsxSingleQuote": true,
    "prettier.requireConfig": false,
    // =========================
    // Language Specific Settings
    // =========================
    // JS/TS/React
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.autoImports": true,
    "javascript.format.enable": false,
    "typescript.suggest.autoImports": true,
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    // C / OS Dev
    "[c]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "C_Cpp.clang_format_style": "Google",
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**",
        "/usr/include",
        "/usr/local/include"
    ],
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    "C_Cpp.errorSquiggles": "enabled",
    // Shell, dotenv, etc.
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[dotenv]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[spring-boot-properties]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",
    "makefile.configureOnOpen": true
    // =========================
    // Suggestions for future learning:
    // - Consider installing extensions for GraphQL, Redis, AWS, Docker, Kubernetes, and C/Embedded development.
    // - Explore VSCode Remote - Containers for dev environments.
    // - Use settings sync to keep your setup portable.
}
